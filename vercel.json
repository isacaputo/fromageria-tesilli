{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "cd client && npm install",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/products/([^/]+)",
      "dest": "/api/products/[id].js?id=$1"
    },
    {
      "src": "/api/products/create",
      "dest": "/api/products/create.js"
    },
    {
      "src": "/api/products",
      "dest": "/api/products/index.js"
    },
    {
      "src": "/api/auth/register",
      "dest": "/api/auth/register.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/orders",
      "dest": "/api/orders/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}